# AssuranceHill - SPA Routing Configuration for IONOS Deploy Now
# This file fixes 403 Forbidden errors by routing all requests to index.html

# Disable MultiViews to prevent Apache indexing
<IfModule mod_negotiation.c>
  Options -MultiViews
</IfModule>

# Enable URL rewriting for SPA routing
<IfModule mod_rewrite.c>
  # Enable the rewrite engine
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite if index.html is directly requested
  RewriteRule ^index\.html$ - [L]
  
  # Route all requests to index.html unless the file or directory exists
  # This allows React Router to handle client-side routing
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Force HTTPS (uncomment when SSL is active)
  # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Compression for better performance
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  
  # HTML (no cache for index.html to always get latest version)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
